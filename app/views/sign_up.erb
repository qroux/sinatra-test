<div class="bg-light container mt-5 py-5 px-5">
  <div class="row">
    <div class="col-sm-12 text-center">
      <h1>Inscription</h1>
      <% if @error %>
      <p class="error"><%= @error %></p>
      <% end %>
      <form
        action="/create_user"
        method="POST"
        class="form-group d-flex flex-column align-items-center"
      >
        <div class="col-12 col-md-6 my-2">
          <input
            type="Email"
            name="username"
            placeholder="email"
            class="form-control"
            required
          />
        </div>
        <div class="col-12 col-md-6 my-2">
          <input
            type="password"
            name="password"
            placeholder="Mot de passe"
            class="form-control"
            minlength="8"
            required
          />
        </div>
        <input type="submit" value="Créer" class="btn btn-secondary my-2" />
      </form>
      <hr>
      <a href="/sign_in" class="m-5">Déjà inscrit?</a>
    </div>
  </div>
</div>
