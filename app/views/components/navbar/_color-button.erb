<% if current_user %>
  <div id="btn-circle btn-xl" class="mr-3">
    <a href="/posts/new">
      <button
        type="button"
        class="btn btn-info btn-circle btn-xl"
        title="Créer un nouvel article"
      >
        <i class="fas fa-plus"></i>
      </button>
    </a>
  </div>
<% else %>
  <div id="btn-circle btn-xl" class="mr-3">
    <button
      type="button"
      data-toggle="modal"
      data-target="#loginModal"
      class="btn btn-info btn-circle btn-xl"
      title="Créer un nouvel article"
    >
      <i class="fas fa-plus"></i>
    </button>
  </div>
<% end %>
