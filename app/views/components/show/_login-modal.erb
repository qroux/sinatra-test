<!-- Modal -->
<div class="modal fade" id="loginModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Connexion</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body text-center">

        <% if @error %>
        <p class="error"><%= @error %></p>
        <% end %>

        <form action="/sign_in" method="POST"
          class="form-group d-flex flex-column align-items-center"
        >
          <div class="col-12 col-md-6 my-2">
            <input name="username" placeholder="Email" class="form-control" />
          </div>
          <div class="col-12 col-md-6 my-2">
            <input name="password" type="password" placeholder="Mot de Passe" class="form-control" />
          </div>
          <div class="col-12 col-md-6 my-2">
            <input type="submit" value="Entrer" class="btn btn-sm btn-secondary" />
          </div>
        </form>

      </div>
    </div>
  </div>
</div>



