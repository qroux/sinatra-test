<div id="home-container" class="container my-5">
  <div id="post-container" class="">
    <div class="d-flex justify-content-between align-items-center">
      <h1>Articles Populaires</h1>
      <%= erb :'components/navbar/_color-button', layout: false %>
    </div>
    <%= erb :'components/show/_login-modal' %>
    <hr>
    <div class="row home-row">
      <% @top_posts.each do |post| %>
        <%= erb :'components/home/_top-post', layout: false, locals: { post: post } %>
      <% end %>
    </div>
  </div>
  <div id="post-container" class="mt-2">
    <div class="">
      <h1>Derniers Articles</h1>
      <hr>
    </div>
    <div class="row home-row">
      <% @posts.each do |post| %>
        <%= erb :'components/home/_post-list', layout: false, locals: { post: post } %>
      <% end %>
    </div>
  </div>
</div>
