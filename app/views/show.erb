<div class="container">
  <div class="row">
    <div class="col-sm-12">
      <h1>ID: <%= @post.id %> - <%= @post.title  %> - rating: <%= @post.rating %></h1>
      <hr>
      <div class="main-content">
        <div class="photo-container" style="background-image: url(<%= @post.photo ||= 'https://picsum.photos/id/1074/600/600' %>)"></div>
        <div class="text-container">
          <p><%= @post.content %></p>
        </div>
      </div>

      <hr>
      <h3>Comments section - <%= @post.comments.count %> </h3>
      <% @post.comments.each do |comment| %>
        <div class="comment">
          <li><%= comment.content %></li>
        </div>
      <% end %>
    </div>
  </div>
</div>
